{
  "expo": {
    "name": "frota",
    "slug": "frota",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/frota-icon.jpeg",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/frota-icon.jpeg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
       "supportsTablet": true,
        "infoPlist": {
          "NSCameraUsageDescription": "Este aplicativo precisa de acesso à sua câmera para ler códigos QR.",
          "NSLocationWhenInUseUsageDescription": "O aplicativo Frota precisa da sua localização para registrar os dados da sua viagem."
        },
        "bundleIdentifier": "com.sesau.frota"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "android.permission.CAMERA"
      ],
      "package": "com.diogosantos04.frota"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-maps",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "O aplicativo Frota precisa da sua localização para registrar os dados da sua viagem."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Este aplicativo precisa de acesso à sua câmera para ler códigos QR."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "variant": "general"
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "cd7bb866-e96f-4e6a-a59c-8ffbe6431f51"
      }
    }
  }
}